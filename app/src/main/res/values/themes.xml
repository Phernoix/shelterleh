<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ShelterLeh" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bluePrimary</item>
        <item name="colorPrimaryVariant">@color/blueSecondary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/redPrimary</item>
        <item name="colorSecondaryVariant">@color/redSecondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>
    <style name = "Theme.ShelterLeh.NoActionBar">
        <item name = "windowActionBar">false</item>
        <item name = "windowNoTitle">true</item>
        <item name = "android:statusBarColor">@android:color/transparent</item>


    </style>
    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="button">
        <item name="cornerSizeTopLeft">70%</item>           //can specify corner position
        <!--<item name="cornerFamilyTopLeft">cut</item>-->
        <item name="cornerSizeBottomRight">70%</item>
        <item name="cornerSizeBottomLeft">70%</item>
        <item name="cornerSizeTopRight">70%</item>           //can specify corner position

        <!--<item name="cornerFamilyBottomRight">cut</item>-->
    </style>
</resources>